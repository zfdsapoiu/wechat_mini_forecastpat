/* 页面容器 */
.scrollarea {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.container {
  padding: 40rpx 30rpx;
  min-height: 100vh;
}

/* 页面标题 */
.page-title {
  text-align: center;
  margin-bottom: 60rpx;
}

.title-text {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 用户信息卡片 */
.user-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 头像区域 */
.avatar-section {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.avatar-btn {
  position: relative;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  border-radius: 80rpx;
  overflow: hidden;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 6rpx solid #667eea;
  transition: all 0.3s ease;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: all 0.3s ease;
}

.avatar-btn:active .avatar-overlay {
  opacity: 1;
}

.avatar-tip {
  color: white;
  font-size: 24rpx;
  text-align: center;
}

/* 昵称区域 */
.nickname-section {
  padding: 30rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.nickname-section:active {
  background: rgba(102, 126, 234, 0.2);
  transform: scale(0.98);
}

.nickname-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.nickname-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nickname-input {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  background: transparent;
  border: none;
  outline: none;
  flex: 1;
}

.nickname-input::placeholder {
  color: #999;
  font-weight: normal;
}

.edit-icon {
  font-size: 28rpx;
}

/* 功能菜单 */
.menu-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(102, 126, 234, 0.1);
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 30rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.menu-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}