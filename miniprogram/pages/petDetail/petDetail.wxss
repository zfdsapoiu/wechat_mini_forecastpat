/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  padding: 20rpx 0 40rpx;
  position: relative;
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.back-icon {
  font-size: 40rpx;
  color: white;
  font-weight: bold;
}

.page-title {
  flex: 1;
  text-align: center;
  margin-right: 80rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

/* 宠物详情卡片 */
.pet-detail-card {
  background: white;
  border-radius: 24rpx;
  margin: 20rpx 0;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 宠物头部信息 */
.pet-header {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
}

.pet-avatar-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin-right: 30rpx;
  backdrop-filter: blur(10rpx);
}

.pet-basic-info {
  flex: 1;
}

.pet-name-large {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.pet-breed {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 8rpx;
}

.save-date {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 详细信息区域 */
.pet-details {
  padding: 40rpx 30rpx;
}

.detail-section {
  margin-bottom: 40rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.section-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.detail-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding: 16rpx 0;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  flex-shrink: 0;
}

.detail-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
}

/* 外貌特征区域 */
.appearance-content {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 6rpx solid #667eea;
}

.appearance-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-all;
}

/* 操作按钮 */
.action-buttons {
  padding: 30rpx;
  background: #f8f9fa;
  display: flex;
  gap: 20rpx;
}

.edit-btn {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  border: none;
}

.edit-btn::after {
  border: none;
}

.fortune-btn {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
  border: none;
}

.fortune-btn::after {
  border: none;
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  margin: 40rpx 0;
  backdrop-filter: blur(10rpx);
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  margin-bottom: 40rpx;
}

.go-back-btn {
  width: 200rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 36rpx;
  font-size: 28rpx;
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
}

.go-back-btn::after {
  border: none;
}