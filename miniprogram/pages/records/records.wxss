/* 页面容器 */
.scrollarea {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.container {
  padding: 40rpx 30rpx;
  min-height: 100vh;
}

/* 页面标题 */
.page-title {
  text-align: center;
  margin-bottom: 40rpx;
}

.title-text {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}


/* 记录列表 */
.records-list {
  margin-bottom: 40rpx;
}

.record-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  /* 优化：减少过渡时间，提升响应速度 */
  transition: transform 0.1s ease, box-shadow 0.1s ease;
}

.record-item:active {
  /* 优化：减少缩放幅度，提升视觉流畅度 */
  transform: scale(0.99);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.pet-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.record-date {
  font-size: 24rpx;
  color: #999;
}

.record-preview {
  margin-bottom: 20rpx;
}

.preview-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.pet-info {
  font-size: 24rpx;
  color: #999;
}

.view-detail {
  font-size: 24rpx;
  color: #667eea;
  font-weight: bold;
}

/* 宠物卡片样式 */
.pet-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.08);
  /* 优化：减少过渡时间，提升响应速度 */
  transition: transform 0.1s ease, box-shadow 0.1s ease;
  border-left: 6rpx solid #667eea;
}

.pet-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.pet-card-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.pet-avatar {
  font-size: 40rpx;
  margin-right: 16rpx;
  width: 60rpx;
  text-align: center;
}

.pet-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.pet-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.pet-breed {
  font-size: 24rpx;
  color: #666;
}

.pet-date {
  text-align: right;
}

.date-text {
  font-size: 22rpx;
  color: #999;
}

.pet-card-body {
  margin-bottom: 16rpx;
}

.pet-summary {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.summary-item {
  font-size: 24rpx;
  color: #666;
  background: rgba(102, 126, 234, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.pet-card-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.view-detail-btn {
  font-size: 24rpx;
  color: #667eea;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  display: block;
  font-size: 36rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.empty-tip {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 60rpx;
}

.go-calculate-btn {
  background: linear-gradient(45deg, #ff6b6b, #ffa500);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 107, 0.3);
}

.go-calculate-btn:active {
  transform: scale(0.95);
}