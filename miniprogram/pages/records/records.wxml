<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <!-- 页面标题 -->
    <view class="page-title">
      <text class="title-text">宠物信息</text>
      <text class="subtitle-text">查看您的宠物信息记录</text>
    </view>
    
    <!-- 宠物信息记录 -->
    <view class="records-list" wx:if="{{petInfoRecords.length > 0}}">
      <view class="pet-card" wx:for="{{petInfoRecords}}" wx:key="id" bindtap="viewPetInfo" data-index="{{index}}">
        <view class="pet-card-header">
          <view class="pet-avatar">🐾</view>
          <view class="pet-info">
            <text class="pet-name">{{item.petName}}</text>
            <text class="pet-breed">{{item.petData.petType || '未知品种'}}</text>
          </view>
          <view class="pet-date">
            <text class="date-text">{{item.date}}</text>
          </view>
        </view>
        <view class="pet-card-body">
          <view class="pet-summary">
            <text class="summary-item">🎂 {{item.petData.birthDate || '未知生日'}}</text>
            <text class="summary-item">✨ {{item.petData.petAppearance || '未知外观'}}</text>
          </view>
        </view>
        <view class="pet-card-footer">
          <text class="view-detail-btn">查看详情 ></text>
        </view>
      </view>
    </view>
    
    <!-- 空状态 -->
    <view class="empty-state" wx:if="{{petInfoRecords.length === 0}}">
      <text class="empty-icon">🐾</text>
      <text class="empty-text">暂无宠物信息记录</text>
      <text class="empty-tip">去添加您的宠物信息吧！</text>
      <button class="go-calculate-btn" bindtap="goToIndex">添加宠物</button>
    </view>
  </view>
</scroll-view>