/**result.wxss**/
.scrollarea {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.container {
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

.result-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff8a5c;
}

.loading {
  text-align: center;
  padding: 80rpx 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.loading-text {
  font-size: 32rpx;
  color: #666;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0% {
    opacity: 0.6;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0.6;
  }
}

/* 流式输出加载点动画 */
.loading-dots {
  font-size: 32rpx;
  margin-top: 20rpx;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 流式输出光标动画 */
.streaming-cursor {
  display: inline-block;
  font-size: 28rpx;
  color: #ff8a5c;
  font-weight: bold;
  animation: blink 1s infinite;
  margin-left: 4rpx;
}

@keyframes blink {
  0%, 50% {
    opacity: 1;
  }
  51%, 100% {
    opacity: 0;
  }
}

.result-content {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  line-height: 1.6;
}

.result-content rich-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
}

/* markdown-renderer 组件样式 */
.result-content markdown-renderer {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
}

/* 覆盖markdown组件的默认样式，使其更适合算命结果页面 */
.result-content .wd-markdown ._h1,
.result-content .wd-markdown ._h2,
.result-content .wd-markdown ._h3 {
  color: #ff8a5c;
  font-weight: bold;
}

.result-content .wd-markdown ._p {
  color: #333;
  font-size: 28rpx;
  line-height: 1.8;
  margin-bottom: 20rpx;
}

.result-content .wd-markdown ._pre {
  background-color: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.error-message {
  text-align: center;
  padding: 60rpx 40rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.error-text {
  font-size: 28rpx;
  color: #ff6b6b;
  margin-bottom: 30rpx;
  display: block;
}

.retry-btn {
  background-color: #ff8a5c;
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.retry-btn:active {
  background-color: #e67e22;
}