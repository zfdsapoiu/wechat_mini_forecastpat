/* login.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 欢迎区域 */
.welcome-section {
  text-align: center;
  margin-bottom: 60rpx;
  margin-top: 80rpx;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 20rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #f0f0f0;
  display: block;
}

/* 介绍提示区域 */
.intro-tips {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
  width: 100%;
  box-sizing: border-box;
}

.wuxing-section {
  margin: 40rpx 0;
  text-align: center;
}

.wuxing-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.wuxing-container {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.wuxing-image {
  width: 400rpx;
  height: 400rpx;
}



.logout-btn:hover {
  background: #ff5252;
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 16rpx rgba(255, 107, 107, 0.3);
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #333333;
}

/* 登录区域 */
.login-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.avatar-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.section-label {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}

.avatar-wrapper {
  background: none;
  border: none;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #667eea;
  margin-bottom: 10rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #666;
}

/* nickname相关样式已移除，宠物名字输入功能已迁移到index页面 */

.login-action {
  margin-top: 40rpx;
  width: 100%;
}

.login-btn {
  width: 100%;
  height: 80rpx;
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.version-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 操作区域 */
.action-section {
  width: 100%;
  margin-bottom: 40rpx;
}

.start-btn {
  width: 100%;
  height: 100rpx;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.start-btn.active {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 107, 0.3);
}

.start-btn.disabled {
  background: #ccc;
  color: #999;
}

/* 底部信息 */
.footer-info {
  margin-top: auto;
  padding-top: 40rpx;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
}