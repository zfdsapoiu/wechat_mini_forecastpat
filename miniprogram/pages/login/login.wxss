/* login.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 欢迎区域 */
.welcome-section {
  text-align: center;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 20rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #f0f0f0;
  display: block;
}

/* 介绍提示区域 */
.intro-tips {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 0rpx;
  width: 100%;
  box-sizing: border-box;
}

.wuxing-section {
  margin-bottom: -20rpx;
  margin-top: -20rpx;
}

.wuxing-image {
  width: 800rpx;
  height: 800rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #333333;
}

/* 操作区域 */
.action-section {
  width: 100%;
  margin-bottom: 40rpx;
}

.start-btn {
  width: 100%;
  height: 100rpx;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  box-sizing: border-box;
}

.start-btn.active {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 107, 0.3);
}

.start-btn.disabled {
  background: #ccc;
  color: #999;
}

