/**index.wxss**/
.scrollarea {
  height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f0f0f0; /* 淡灰色背景 */
  min-height: 100%;
}

/* 页面标题样式 */
.page-title {
  text-align: center;
  margin: 40rpx 0;
}

.title-text {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle-text {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  width: 100%;
}

/* 登录提示样式 */
.login-tip {
  color: #ff6b6b;
  font-size: 32rpx;
  padding: 20rpx;
  background-color: #fff5f5;
  border-radius: 10rpx;
  border: 2rpx solid #ffebee;
  margin-bottom: 20rpx;
}

/* 返回登录页按钮样式 */
.back-to-login-btn {
  background-color: #667eea;
  color: white;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
  margin-top: 20rpx;
}

.back-to-login-btn:hover {
  background-color: #5a6fd8;
}

/* 移除了用户头像和昵称相关样式，这些功能已转移到登录页面 */

.nickname-wrapper {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.nickname-label {
  margin-right: 10rpx;
  font-size: 28rpx;
  color: #555;
}

.nickname-input {
  border: 1rpx solid #ddd;
  padding: 10rpx 15rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  flex-grow: 1;
}

.input-section, .pet-feature-section {
  width: 100%;
  margin-bottom: 30rpx;
  padding: 30rpx 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #ff8a5c; /* 宠物主题色 */
  margin-bottom: 20rpx;
  display: block;
}

.picker, .input-group, .input {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 10rpx;
  border: 1rpx solid #eee;
  font-size: 28rpx;
  color: #333;
}

.input-tip {
  font-size: 24rpx;
  color: #888;
  margin-top: 10rpx;
  padding: 0 10rpx;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.input-group {
  display: flex;
  align-items: center;
}

.input-label {
  font-size: 28rpx;
  color: #555;
  margin-right: 15rpx;
  min-width: 80rpx; /* 确保标签对齐 */
}

.input-field {
  flex-grow: 1;
  font-size: 28rpx;
  color: #333;
}

.placeholder-style {
  color: #aaa;
}

.pet-btn {
  width: 80%;
  background-color: #ff8a5c; /* 宠物主题色 */
  color: white;
  border-radius: 50rpx; /* 圆角按钮 */
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(255, 138, 92, 0.4);
  transition: background-color 0.2s ease;
}

.pet-btn:active {
  background-color: #e67043; /* 点击效果 */
}

.disabled-btn {
  background-color: #ccc !important;
  color: #999 !important;
  box-shadow: none !important;
}

.disabled-btn:active {
  background-color: #ccc !important;
}
